/**
 * The ever-ironic tests for the framework itself.
 *
 * @author Jackson Ray Hamilton
 */
class UnitTestTests {

  function void Assertion_IntegersGiven_AssertionPasses() {
    do UnitTest.assertIntegerEquals("same integers pass", true, UnitTest.integerEquals(5, 5));
    return;
  }

  function void Assertion_IntegersGiven_AssertionFails() {
    do UnitTest.assertIntegerEquals("different integers fail", false, UnitTest.integerEquals(5, 4));
    return;
  }

  function void Assertion_StringsGiven_AssertionPasses() {
    do UnitTest.assertIntegerEquals("same strings pass", true, UnitTest.stringEquals("abc", "abc"));
    return;
  }

  function void Assertion_StringsGiven_AssertionFails() {
    do UnitTest.assertIntegerEquals("different string fail", false, UnitTest.stringEquals("abc", "def"));
    return;
  }

  function void runTests() {
    do UnitTestTests.Assertion_IntegersGiven_AssertionPasses();
    do UnitTestTests.Assertion_IntegersGiven_AssertionFails();
    do UnitTestTests.Assertion_StringsGiven_AssertionPasses();
    do UnitTestTests.Assertion_StringsGiven_AssertionFails();
    return;
  }

}
